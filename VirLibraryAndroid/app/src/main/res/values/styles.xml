<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:alertDialogTheme">@style/CustomDialogTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Base application theme. -->
    <style name="AppThemeBis" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorBackground">@color/darkgrey</item>
        <item name="android:alertDialogTheme">@style/CustomDialogTheme</item>
    </style>

    <style name="boutonA">
        <item name="android:background">@drawable/button_a</item>
        <item name="android:textColor">@drawable/button_text_color_a</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:height">50dp</item>
        <item name="android:width">120dp</item>
    </style>

    <style name="boutonB" parent="boutonA">
        <item name="android:background">@drawable/button_b</item>
        <item name="android:textColor">@drawable/button_text_color_b</item>
    </style>

    <style name="inputA">
        <item name="android:inputType">text</item>
        <item name="android:background">@color/darkgrey</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textColorHint">@color/yellow</item>
    </style>

    <style name="darkPanel">
        <item name="android:background">@drawable/rectangle</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:alertDialogStyle">@style/CustomDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/CustomDialogWindowTitle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="CustomDialogStyle">
        <item name="android:bottomBright">@color/white</item>
        <item name="android:bottomDark">@color/white</item>
        <item name="android:bottomMedium">@color/white</item>
        <item name="android:centerBright">@color/white</item>
        <item name="android:centerDark">@color/white</item>
        <item name="android:centerMedium">@color/white</item>
        <item name="android:fullBright">@color/darkgrey</item>
        <item name="android:fullDark">@color/darkgrey</item>
        <item name="android:topBright">@color/blue</item>
        <item name="android:topDark">@color/blue</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="CustomDialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle
        </item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textCellule">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bordurecase</item>
    </style>

    <style name="textCellule_content" parent="textCellule">
        <item name="android:layout_gravity">fill_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textJour" parent="textCellule">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bordurecase</item>
    </style>

    <style name="textHoraire" parent="textJour">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>

    <style name="bouton_tableau">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="bouton_new" parent="bouton_tableau">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/ic_action_new</item>
    </style>

    <style name="bouton_remove" parent="bouton_tableau">
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:background">@drawable/ic_action_remove</item>
    </style>

    <style name="bouton_forward" parent="bouton_tableau">
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:background">@drawable/ic_action_forward</item>
    </style>

    <style name="coursProf">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_action_new</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="tableau_profil_col_attributes">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">150sp</item>
        <item name="android:background">@drawable/bordurecase_b</item>
    </style>

    <style name="tableau_profil_col_values" parent="tableau_profil_col_attributes">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">375sp</item>
    </style>

    <style name="tableau_profil_col_values_edit" parent="tableau_profil_col_values">
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="tableau_profil_bouton_validate">
        <item name="android:layout_width">35sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">35sp</item>
        <item name="android:background">@drawable/bordurecase_c</item>
        <item name="android:tint">@color/blue</item>
        <item name="android:src">@drawable/ic_action_accept</item>
        <item name="android:contentDescription">Validation du nouveau contenu</item>
    </style>

    <style name="tableau_profil_bouton_cancel" parent="tableau_profil_bouton_validate">
        <item name="android:src">@drawable/ic_action_cancel</item>
        <item name="android:tint">@color/red</item>
        <item name="android:contentDescription">Annulation du nouveau contenu</item>
    </style>

    <style name="textRecherche">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textTitres_UE" parent="tableau_profil_col_attributes">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bordurecase</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowBackground">@color/blue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#fff</item>
        <item name="background">@color/blue</item>
    </style>

    <style name="textResults">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="AppThemeBis.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeBis.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeBis.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
