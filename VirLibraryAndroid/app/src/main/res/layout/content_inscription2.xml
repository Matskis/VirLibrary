<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="universitblaisepascal.virlibrary.Inscription2Activity"
    tools:showIn="@layout/activity_inscription2">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/inputAdresseInscription"
        android:hint="@string/inputTxtAdresseInscription2"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/buttonSuivantInscription2"
        android:layout_alignEnd="@+id/buttonSuivantInscription2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:theme="@style/textCellule" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/inputAdresse2Inscription"
        android:hint="@string/inputTxtAdresse2Inscription2"
        android:textAlignment="center"
        android:layout_below="@+id/inputAdresseInscription"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/inputAdresseInscription"
        android:layout_alignEnd="@+id/inputAdresseInscription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:theme="@style/textCellule" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/inputCpInscription"
        android:hint="@string/inputTxtCpInscription2"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/inputAdresse2Inscription"
        android:layout_alignLeft="@+id/inputAdresse2Inscription"
        android:layout_alignStart="@+id/inputAdresse2Inscription"
        android:layout_alignRight="@+id/inputAdresse2Inscription"
        android:layout_alignEnd="@+id/inputAdresse2Inscription"
        android:theme="@style/textCellule" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/inputVilleInscription"
        android:hint="@string/inputTxtVilleInscription2"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/inputCpInscription"
        android:layout_alignLeft="@+id/inputCpInscription"
        android:layout_alignStart="@+id/inputCpInscription"
        android:layout_alignRight="@+id/inputCpInscription"
        android:layout_alignEnd="@+id/inputCpInscription"
        android:theme="@style/textCellule" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputPaysInscription"
        android:layout_below="@+id/inputVilleInscription"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_alignRight="@+id/buttonSuivantInscription2"
        android:layout_alignEnd="@+id/buttonSuivantInscription2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inscription_bouton_annuler"
        android:id="@+id/buttonAnnulerInscription2"
        android:layout_below="@+id/inputPaysInscription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:theme="@style/boutonB" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inscription_bouton_suivant"
        android:id="@+id/buttonSuivantInscription2"
        android:layout_alignBottom="@+id/buttonAnnulerInscription2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:theme="@style/boutonB" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_inscription_Retour"
        android:id="@+id/buttonRetourInscription2"
        android:layout_alignTop="@+id/buttonAnnulerInscription2"
        android:layout_centerHorizontal="true"
        android:theme="@style/boutonB" />

</RelativeLayout>
