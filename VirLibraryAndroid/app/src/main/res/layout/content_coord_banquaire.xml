<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="universitblaisepascal.virlibrary.CoordBanquaireActivity"
    tools:showIn="@layout/activity_coord_banquaire">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Vos Carte Banquaire"
        style="@style/textTitres_UE"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtviewListCarteBanquaireVide"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/txtview_carte_banquaire_vide" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewCarteBanquaire"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtviewTitreCompteBanquaire"
        android:layout_below="@+id/listViewCarteBanquaire"
        android:text="@string/txtview_compte_banquaire_titre"
        android:layout_alignRight="@+id/listViewCompteBanquaire"
        android:layout_alignEnd="@+id/listViewCompteBanquaire"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/textTitres_UE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewAucunCompteAjouteCoordBanquaire"
        android:layout_below="@+id/txtviewTitreCompteBanquaire"
        android:text="Aucun Compte n&apos;est actuellement ajoutÃ©" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewCompteBanquaire"
        android:layout_below="@+id/txtviewTitreCompteBanquaire" />

</RelativeLayout>
